<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/activities_background"
    >
    
        <TextView
            android:id="@+id/heberdown_activities_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/title_style"
            android:text="@string/activities_title"
            />
       
        <ScrollView
            android:id="@+id/heberdown_activities_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        <LinearLayout
        	android:id="@+id/heberdown_activities_layout"
        	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    	>
        
        <TableLayout
            android:id="@+id/heberdown_activities_table"
            android:layout_width="fill_parent"
	   		android:layout_height="fill_parent"
	   		android:orientation="horizontal"
	   		android:stretchColumns="1"
            >
           <TableRow>
               <TextView
            		android:id="@+id/hiking_title"
            		android:text="Hiking"
            		style="@style/table_title_style"
            		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
            <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                >

                <ImageView
                    android:id="@+id/heberdown_hikingimage"
                    android:src="@drawable/hikingimage" 
					style="@style/table_image_layout"
                    />
             
                <TextView
                    android:id="@+id/heberdown_hikingtext"
                    android:text="@string/heberdown_hikingtext"
                    style="@style/table_text_layout"
                    />
            </TableRow>
            
            <TableRow>
               <TextView
            		android:id="@+id/picnicking_title"
            		android:text="Picnicking"
            		style="@style/table_title_style"
            		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
            
            <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                >
                <ImageView 
                    android:id="@+id/heberdown_picnickingimage"
                    android:src="@drawable/picnickingimage"
					style="@style/table_image_layout"
                    />
                <TextView
                    android:id="@+id/heberdown_picnickingtext"
                    android:text="@string/heberdown_picnickingtext"
                    style="@style/table_text_layout"
                    />
            </TableRow>
            <TableRow>
               <TextView
            		android:id="@+id/education_title"
            		android:text="Education"
            		style="@style/table_title_style"
            		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
             <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                >
                <ImageView 
                    android:id="@+id/heberdown_educationimage"
                    android:src="@drawable/educationimage"
					style="@style/table_image_layout"
                    />
                <TextView
                    android:id="@+id/heberdown_educationtext"
                    android:text="@string/heberdown_educationtext"
                    style="@style/table_text_layout"
                    />
            </TableRow>
            <TableRow>
               <TextView
            		android:id="@+id/fishing_title"
             		android:text="Fishing"
            		style="@style/table_title_style"
            		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
            <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                >
                <ImageView 
                    android:id="@+id/heberdown_fishingimage"
                    android:src="@drawable/fishingimage"
                    style="@style/table_image_layout"
                    />
                <TextView
                    android:id="@+id/heberdown_fishingtext"
                    android:text="@string/heberdown_fishingtext"
                    style="@style/table_text_layout"
                    />
            </TableRow>
            <TableRow>
               <TextView
            		android:id="@+id/petpolicy_title"
            		android:text="Pet Policy"
             		style="@style/table_title_style"
             		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
            <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                >
                <ImageView 
                    android:id="@+id/heberdown_petpolicyimage"
                    android:src="@drawable/petpolicyimage"
                    style="@style/table_image_layout"
                    />
                <TextView
                    android:id="@+id/heberdown_petpolicytext"
                    android:text="@string/heberdown_petpolicytext"
                    style="@style/table_text_layout"
                     />
            </TableRow>
            <TableRow>
               <TextView
            		android:id="@+id/wildlifeviewing_title"
            		android:text="Wildlife Viewing"
            		style="@style/table_title_style"
            		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
            <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                >
                <ImageView 
                    android:id="@+id/heberdown_wildlifeviewingimage"
                    android:src="@drawable/wildlifeviewingimage"
                    style="@style/table_image_layout"
                    />
                <TextView
                    android:id="@+id/heberdown_wildlifeviewingtext"
                    android:text="@string/heberdown_wildlifeviewingtext"
                    style="@style/table_text_layout"
                    />
            </TableRow>
            <TableRow>
               <TextView
            		android:id="@+id/groupcamping_title"
            		android:text="Group Camping"
            		style="@style/table_title_style"
            		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
            <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                >
                <ImageView 
                    android:id="@+id/heberdown_groupcammping_image"
                    android:src="@drawable/groupcampingimage"
                    style="@style/table_image_layout"
                    />
                <TextView
                    android:id="@+id/heberdown_groupcampingtext"
                    android:text="@string/heberdown_groupcampingtext"
                    style="@style/table_text_layout"
                    />
            </TableRow>
            
            <TableRow>
               <TextView
            		android:id="@+id/naturestudies_title"
            		android:text="Nature Studies"
            		style="@style/table_title_style"
            		android:background="@drawable/activities_title_header"
            		/>
               </TableRow>
            <TableRow
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                >
                <ImageView 
                    android:id="@+id/heberdown_naturestudiesimage"
                    android:src="@drawable/naturestudiesimage"
                    style="@style/table_image_layout"
                    />
                <TextView
                    android:id="@+id/heberdown_naturestudiestext"
                    android:text="@string/heberdown_naturestudiestext"
                    style="@style/table_text_layout"
                    />
            </TableRow>
        </TableLayout>
        
    </LinearLayout>
</ScrollView>
   

</LinearLayout>