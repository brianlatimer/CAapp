<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/directions_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".News" >

    <LinearLayout
        android:id="@+id/directions_sublayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/directions_title"
            style="@style/municipal_title_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DIRECTIONS"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/directions_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/long_sault_directions"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>