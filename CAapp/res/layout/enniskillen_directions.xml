<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/directions_layout"
    android:background="@drawable/background"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
  	android:orientation="vertical"
  	>
  	<TextView
  	    android:id="@+id/directions_title"
  	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="DIRECTIONS"
    	style="@style/municipal_title_style"    	
    	/>

    <Button
        android:id="@+id/mapit_button"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="MAP IT!"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/directions_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/directions_title"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/enniskillen_directions"
        android:textSize="20sp" />

   </RelativeLayout>
